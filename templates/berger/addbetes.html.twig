                                    </div>
                                    <div class="col-sm-12">
                                    <p class="text-right">
                                        <input class="btn btn-success" type="submit" name="submit" value="Enregistrer"/>
                                    </p>
                                </div>
                                </form>
                            </div>
                            </div>
                        </fieldset>
 #}
                    </section>
                    <!-- End: Content -->

                {% endblock %}