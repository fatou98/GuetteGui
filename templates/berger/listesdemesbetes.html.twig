{% extends 'layoutberger.html.twig' %}

{% block content %}
 <!-- recent orders table -->
            <div class="panel">
                <div class="panel-menu admin-form theme-primary">
                                        <h2 style="text-align:center;">Liste de  mes betes</h2>
                                        <hr>
                <div class="panel-body pn">
                    <div class="table-responsive">
                        <table class="table admin-form theme-warning tc-checkbox-1 fs13">
                            <thead>
                                <tr class="bg-light">
                                    <th class="text-center">Select</th>
                                    <th class="">Image</th>
                                    <th class="">Nomcomplet</th>
                                    <th class="">Prix</th>
                                    <th class="">Taille</th>
                                    <th class="">Poids</th>
                                    <th class="">Age</th>
                                    <th class="text-right">Status</th>

                                </tr>
                            </thead>
                            <tbody>
                            {% for bete in betes %}
                                
                                <tr>
                                    <td class="text-center">
                                        <label class="option block mn">
                                            <input type="checkbox" name="mobileos" value="FR">
                                            <span class="checkbox mn"></span>
                                        </label>
                                    </td>
                                    <td class="w50">
                                        <img class="img-responsive mw30 ib mr10" title="user" src="data:image/png;base64,{{bete.images[0].image}}">
                                    </td>
                                    <td class="">{{bete.nomcomplet}}</td>
                                    <td class="">{{bete.prix}}</td>
                                    <td class="">{{bete.taille}}</td>
                                    <td class="">{{bete.poids}}</td>
                                    <td class="">{{bete.age}}</td>
                                    <td class="text-right">
                                        <div class="btn-group text-right">
                                            <a href="javascript::void(0)"><i class="fa fa-trash-o" style="color:red;font-size:22px;"></i></a>
                                            <a href="javascript::void(0)"><i class="fa fa-edit" style="color:green;font-size:22px;"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                                           {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

{% endblock %}